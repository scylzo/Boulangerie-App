rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Règle pour la collection 'users'
    // Permet à un utilisateur de lire et écrire uniquement son propre document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Regles pour les autres collections (à adapter selon vos besoins)
    // Par exemple, pour permettre la lecture à tous les utilisateurs authentifiés :
    match /{document=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; // Attention: permet à tout utilisateur connecté d'écrire
    }
  }
}
